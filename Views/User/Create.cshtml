@model User
<div class="wrapper">

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-12 col-xl-10">
                    <div class="row align-items-center my-4">
                        <div class="col">
                            <h2 class="h3 mb-0 page-title">افزودن کاربر</h2>
                            <hr class="my-4">

                        </div>
                        
                    </div>
                    <form asp-action="Create">
                        @if (!string.IsNullOrWhiteSpace(ViewBag.error))
                        {
                            <span class="alert-danger">@ViewBag.error</span>
                        }
                        @if (!string.IsNullOrWhiteSpace(ViewBag.success))
                        {
                            <span class="alert-success">@ViewBag.success</span>
                        }
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="username">نام کاربری</label>
                                <input type="text" id="username" class="form-control" asp-for="Username">
                                <span asp-validation-for="Usename" style="color:red;"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">ایمیل</label>
                                <input type="text" id="email" class="form-control" asp-for="Email">
                                <span asp-validation-for="Email" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="password">رمزعبور</label>
                                <input type="email" class="form-control" id="password" asp-for="Password">
                                <span asp-validation-for="Password" style="color:red;"></span>
                            </div>
                            <div class="form-group col-md-6">
                            <label for="mobile">موبایل</label>
                                <input type="text" class="form-control" id="mobile" asp-for="Mobile">
                                <span asp-validation-for="Mobile" style="color:red;"></span>
                            </div>
                        </div>
                        <div class="form-row">
                        <label for="role" class="mr-4">نقش : </label>
                        <div class="custom-control custom-radio">
                                <input type="radio" id="admin" name="Role" class="custom-control-input">
                            <label class="custom-control-label" for="admin">ادمین</label>
                            </div>
                        <div class="custom-control custom-radio ">
                            <input type="radio" id="user" name="Role" class="custom-control-input" checked>
                                <label class="custom-control-label" for="user">کاربر</label>
                            </div>
                        </div>

                    <div class="form-row">
                        <label for="IsActive" class="mr-4">وضعیت : </label>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="active" name="IsActive" class="custom-control-input" checked>
                            <label class="custom-control-label" for="active">فعال</label>
                        </div>
                        <div class="custom-control custom-radio ">
                            <input type="radio" id="deActive" name="IsActive" class="custom-control-input" >
                            <label class="custom-control-label" for="deActive">غیرفعال</label>
                        </div>
                    </div>
                    <div class="form-row col-auto mt-4">
                            <button type="button" class="btn btn-primary">ذخیره</button>
                        </div>
                    </form>
                </div> 
            </div>
        </div> 
</div>